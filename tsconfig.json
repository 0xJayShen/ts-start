{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "lib",
    "baseUrl": ".",
    "lib": ["ES2015", "ES2016", "ES2017"]
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}